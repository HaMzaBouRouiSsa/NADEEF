InstallRule(name) ::= <<
create table $name$ (
   name varchar(255) primary key not null,
   type int,
   code text not null,
   java_code text,
   table1 varchar(255) not null,
   table2 varchar(255),
   last_edit_timestamp timestamp)
>>

InstallProject(name) ::= <<
create table $name$ (
    id serial,
    dbname varchar(255) NOT NULL UNIQUE,
    name varchar(255) UNIQUE
)
>>

InstallRuleType(name) ::= <<
create table $name$ (
    type integer primary key not null,
    name varchar(255) not null,
    enabled boolean not null)
>>

InsertRule(type, code, table1, table2, name) ::= <<
insert into RULE (name, type, code, table1, table2, last_edit_timestamp)
  select '$name$', x.type, '$code$', '$table1$', '$table2$', current_timestamp from
  ruletype x where x.name = '$type$'
>>

QueryTable(tablename, start, interval) ::= <<
    select
        *
    from
        $tablename$
    limit $interval$ offset $start$
>>

QueryViolation(tablename, start, interval, ruleFilter) ::= <<
    select
        *
    from violation
    where rid like '$ruleFilter$'
    limit $interval$ offset $start$
>>

QueryViolationWithFilter(tablename, start, interval, firstNViolation, ruleFilter) ::= <<
    select
        *
    from violation
    where vid < $firstNViolation$ and rid like '$ruleFilter$'
    limit $interval$ offset $start$
>>
